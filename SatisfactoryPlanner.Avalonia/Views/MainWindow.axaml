<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SatisfactoryPlanner.Avalonia.ViewModels"
        xmlns:views="using:SatisfactoryPlanner.Avalonia.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="SatisfactoryPlanner.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}"
        MinWidth="800"
        MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="Debug">
                <MenuItem Header="Toggle Debug Console" Click="ToggleDebug_Click"/>
            </MenuItem>
        </Menu>

        <!-- Top Milestone Panel -->
        <views:MilestoneManagerView Grid.Row="1"
                                   DataContext="{Binding MilestoneManager}"/>

        <!-- Main Content Area -->
        <views:ProductionPlannerView Grid.Row="2"
                                    DataContext="{Binding ProductionPlanner}"/>

        <!-- Debug Panel -->
        <Border Grid.Row="3" 
                Background="LightYellow" 
                BorderBrush="Gray" 
                BorderThickness="1,1,1,0"
                IsVisible="{Binding IsDebugPanelVisible}"
                MinHeight="0"
                MaxHeight="200">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" 
                        Background="DarkGray" 
                        Padding="8,4">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Debug Console" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        <Button Content="Clear" 
                                Margin="10,0,0,0"
                                Click="ClearDebug_Click"/>
                        <Button x:Name="ToggleButton"
                                Content="Hide" 
                                Margin="5,0,0,0"
                                Click="ToggleDebug_Click"/>
                    </StackPanel>
                </Border>
                
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding Debug.DebugText}" 
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             Background="Transparent"
                             BorderThickness="0"
                             FontFamily="Consolas"
                             FontSize="11"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>

    <Window.Styles>
        <Style Selector="Border[IsVisible=False]">
            <Setter Property="Height" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
        </Style>
    </Window.Styles>

</Window>
