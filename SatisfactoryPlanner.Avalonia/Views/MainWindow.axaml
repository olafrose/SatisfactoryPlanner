<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SatisfactoryPlanner.Avalonia.ViewModels"
        xmlns:views="using:SatisfactoryPlanner.Avalonia.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="SatisfactoryPlanner.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}"
        MinWidth="800"
        MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Milestone Panel -->
        <views:MilestoneManagerView Grid.Row="0"
                                   DataContext="{Binding MilestoneManager}"/>

        <!-- Main Content Area -->
        <views:ProductionPlannerView Grid.Row="1"
                                    DataContext="{Binding ProductionPlanner}"/>
    </Grid>

</Window>
